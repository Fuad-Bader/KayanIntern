@model KayanIntern.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card blur blur-shadow z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-3 mx-3 z-index-2" style="border-radius: 0.5rem;">
                    <div class="bg-gradient-primary shadow-dark border-radius-lg py-3 pe-1">
                        <h4 class="text-light font-weight-bolder text-center mt-2 mb-0">Sign in</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Index" method="post" class="text-start">
                        <div class="input-group input-group-outline my-3">
                            <label class="form-label">Email</label>
                            <input type="email" asp-for="Email" class="form-control">
                        </div>
                        <div class="input-group input-group-outline mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control">
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-check form-switch d-flex align-items-center mb-3">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                            <label class="form-check-label mb-0 ms-3" for="rememberMe">Remember me</label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-primary w-50 my-4 mb-2">Sign in</button>
                        </div>

                        <p class="mt-4 text-sm text-center">
                            Don't have an account?
                            <a asp-controller="Registration" asp-action="Index" class="text-primary text-gradient font-weight-bold">Sign up</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

